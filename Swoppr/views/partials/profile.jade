div(class="container")
        div(class="row")
            div(class="col-sm-12 title-header no-space-bottom")
                h1 Mijn profiel
        div(class="row")
            div(class="col-sm-6")
                h2 Gebruikersgegevens
                table(class="table")
                    tr
                        td Emailadres
                        td {{$root.user.local.email}}
                    tr
                        td Naam
                        td {{$root.user.toString()}}
            div(class="col-sm-6")
                h2(class="authorized2") Login met Google+
                div(ng-show="$root.user.google.token")
                    table(class="table")
                        tr
                            td Emailadres
                            td {{ $root.user.google.email }}
                        tr
                            td Name
                            td {{ $root.user.google.name }}
                    a(redir, href="/partials/unlink/google", class="btn btn-default redirect", title="Ontkoppel login") Ontkoppel login
                div(ng-hide="$root.user.google.token")
                    a(redir, href="/partials/connect/google", class="btn btn-default redirect", title="Koppel login") Koppel login