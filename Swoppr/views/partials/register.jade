div(class="intro intro-authorize")
    div(class="intro-body")
        div(class="container")
            div(class="col-sm-12 col-sm-offset-0 col-md-9 col-md-offset-3 col-lg-7 col-lg-offset-5")
                div(class="panel")
                    div(class="panel-heading"): h3 Sluit u bij ons aan
                    div(class="panel-body")
                        form(class="form-horizontal")
                            div(class="form-group")
                                label(for=surname, class="col-sm-3 control-label") Voornaam
                                div(class="col-sm-9")
                                    input(name="surname", id="surname", class="form-control", placeholder="Bv. Jonathan")
                            div(class="form-group")
                                label(for=lastname, class="col-sm-3 control-label") Achternaam
                                div(class="col-sm-9")
                                    input(name="lastname", id="lastname", class="form-control", placeholder="Bv. Jonathan")
                            div(class="form-group")
                                label(for=email, class="col-sm-3 control-label") Emailadres
                                div(class="col-sm-9")
                                    input(type="email", name="email", id="email", class="form-control", placeholder="Bv. jonathan@swoppr.be")
                            div(class="form-group")
                                label(for="password", class="col-sm-3 control-label") Wachtwoord
                                div(class="col-sm-9")
                                    input(name="password", id="password" class="form-control", placeholder="Bv. swoppr01")
                            div(class="form-group")
                                label(for="passwordAgain", class="col-sm-3 control-label") Wachtwoord hertypen
                                div(class="col-sm-9")
                                    input(name="passwordAgain", id="passwordAgain" class="form-control", placeholder="Bv. swoppr01")
                            div(class="form-group")
                                div(class="col-sm-offset-3 col-sm-9")
                                    input(type="submit", value="Registreer" class="btn")