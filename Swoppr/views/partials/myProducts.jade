div(class="container")
    div(class="row")
        div(class="col-sm-12")
            h1 Mijn artikelen
    div(class="row")
        div(class="col-sm-12")
           div(class="table-responsive")
               table(class="table table-hover")
                tr
                    th: a(href="#", ng-click="sortType = 'productName'; sortReverse = !sortReverse") Naam
                    th: a(href="#", ng-click="sortType = 'pricePerDay'; sortReverse = !sortReverse") Prijs/dag
                    th: a(href="#", ng-click="sortType = 'place'; sortReverse = !sortReverse")  Ophaalplaats
                    th
                    th
                    th
                tr(ng-repeat=("p in $root.user.products | orderBy:sortType:sortReverse"))
                    td(ng-show="p.isDeleted == false") {{p.productName}}
                    td(ng-show="p.isDeleted == false") {{p.pricePerDay}}
                    td(ng-show="p.isDeleted == false") {{p.place}}
                    td(ng-show="p.isDeleted == false"): a(href="/detailProduct/{{p.id}}"): i(class="fa fa-info-circle smallFont")
                    td(ng-show="p.isDeleted == false"): a(href="#"): i(class="fa fa-pencil smallFont")
                    td(ng-show="p.isDeleted == false"): a(href="#", ng-click="open(p.id, p.productName, 'product')"): i(class="fa fa-trash smallFont")